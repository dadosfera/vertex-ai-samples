#FROM nvcr.io/nvidia/tensorflow:22.12-tf2-py3
FROM nvcr.io/nvidia/cuda:11.3.0-cudnn8-runtime-ubuntu20.04
ARG DEBIAN_FRONTEND=noninteractive

RUN apt update -y
RUN apt-get install -y python3.10 && \
     apt-get install -y python3-pip
RUN pip3 install protobuf==3.20.* && pip3 install matplotlib
RUN pip3 install tensorflow --upgrade && \
     pip3 install tensorflow_hub --upgrade && \
     pip3 install tensorflow-datasets
RUN pip3 install ipykernel
RUN pip3 install pandas --upgrade